{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "useRootPaddingAwareAlignments": true,
        "appearanceTools": false,
        "layout": {
            "contentSize": "760px",
            "wideSize": "1140px",
            "allowCustomContentAndWideSize": true,
            "allowEditing": true
        },
        "color": {
            "text": true,
            "background": true,
            "link": true,
            "caption": true,
            "button": true,
            "heading": true,

            "custom": false,
            "customDuotone": false,
            "customGradient": false,
            "defaultPalette": false,
            "defaultDuotone": false,
            "defaultGradients": false,

            "gradients": [
                {
                    "name": "Purple",
                    "slug": "purple",
                    "gradient": "linear-gradient(135deg, #4D34FA, #ad34fa)"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "gradient": "linear-gradient(135deg, #0057FF, #31B5FF)"
                },
                {
                    "name": "Pink",
                    "slug": "pink",
                    "gradient": "linear-gradient(135deg, #FF007A, #FF81BD)"
                }
            ],
            "duotone": [
                {
                    "name": "Blue",
                    "slug": "blue",
                    "colors": ["#462CFF", "#ECE8FF"]
                },
                {
                    "name": "Pink",
                    "slug": "Pink",
                    "colors": ["#F22AAA", "#FFDBF0"]
                },
                {
                    "name": "Green",
                    "slug": "green",
                    "colors": ["#196A64", "#E0FFFD"]
                }
            ],
            "palette": [
                {
                    "name": "Violet",
                    "slug": "primary",
                    "color": "#2f1847"
                },
                {
                    "name": "Rose",
                    "slug": "secondary",
                    "color": "#fe2c70"
                },
                {
                    "name": "Vert pâle",
                    "slug": "accent",
                    "color": "#8be8cb"
                },
                {
                    "name": "Violet clair",
                    "slug": "contrast",
                    "color": "#725C84"
                },
                {
                    "name": "Blanc",
                    "slug": "base",
                    "color": "#FFFFFF"
                },
                {
                    "name": "Gris",
                    "slug": "gray",
                    "color": "#F9F7F3"
                }
            ]
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true,

            "units": ["px", "rem", "vh", "%"],

            "customSpacingSize": false,
            "defaultSpacingSizes": false,
            "spacingSizes": [
                {
                    "name": "Très petit",
                    "slug": "xs",
                    "size": "1rem"
                },
                {
                    "name": "Petit",
                    "slug": "s",
                    "size": "1.6rem"
                },
                {
                    "name": "Moyen",
                    "slug": "m",
                    "size": "3.2rem"
                },
                {
                    "name": "Grand",
                    "slug": "l",
                    "size": "4.8rem"
                },
                {
                    "name": "Très grand",
                    "slug": "xl",
                    "size": "6.4rem"
                }
            ]
        },
        "typography": {
            "dropCap": false,
            "fontStyle": false,
            "fontWeight": true,
            "letterSpacing": false,
            "lineHeight": true,
            "textAlign": true,
            "textColumns": false,
            "textDecoration": false,
            "textTransform": true,
            "writingMode": false,

            "customFontSize": false,
            "defaultFontSizes": false,
            "fluid": true,
            "fontSizes": [
                {
                    "name": "Petit",
                    "slug": "s",
                    "size": "0.88rem"
                },
                {
                    "name": "Moyen",
                    "slug": "m",
                    "size": "1.125rem"
                },
                {
                    "name": "Grand",
                    "slug": "l",
                    "size": "1.4rem"
                },
                {
                    "name": "Très Grand",
                    "slug": "xl",
                    "size": "3rem"
                },
                {
                    "name": "Énorme",
                    "slug": "xxl",
                    "size": "4rem"
                }
            ],

            "fontFamilies": [
                {
                    "fontFamily": "'Open Sans', sans-serif",
                    "name": "Open Sans",
                    "slug": "primary",
                    "fontFace": [
                        {
                            "fontFamily": "Open Sans",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "fontWeight": "400",
                            "src": ["file:./assets/fonts/open-sans-400.woff2"]
                        },
                        {
                            "fontFamily": "Open Sans",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "fontWeight": "700",
                            "src": ["file:./assets/fonts/open-sans-700.woff2"]
                        }
                    ]
                },
                {
                    "fontFamily": "'Work Sans', sans-serif",
                    "name": "Work Sans",
                    "slug": "secondary",
                    "fontFace": [
                        {
                            "fontFamily": "Work Sans",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "fontWeight": "300 900",
                            "src": [
                                "file:./assets/fonts/work-sans-variable.woff2"
                            ]
                        }
                    ]
                }
            ]
        },
        "border": {
            "color": true,
            "width": true,
            "style": true,

            "radius": true,
            "radiusSizes": [
                {
                    "name": "Très petit",
                    "slug": "xs",
                    "size": "4px"
                },
                {
                    "name": "Petit",
                    "slug": "s",
                    "size": "10px"
                },
                {
                    "name": "Moyen",
                    "slug": "m",
                    "size": "20px"
                },
                {
                    "name": "Rond",
                    "slug": "full",
                    "size": "999px"
                }
            ]
        },
        "background": {
            "backgroundImage": true,
            "backgroundSize": true
        },
        "shadow": {
            "defaultPresets": false,
            "presets": [
                {
                    "name": "Douce",
                    "slug": "light",
                    "shadow": "rgba(100, 100, 111, 0.2) 0px 7px 29px 0px"
                },
                {
                    "name": "Fine",
                    "slug": "neat",
                    "shadow": "rgba(99, 99, 99, 0.4) 0px 2px 8px 0px"
                },
                {
                    "name": "Imposante",
                    "slug": "huge",
                    "shadow": "rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px"
                }
            ]
        },
        "dimensions": {
            "minHeight": true,

            "aspectRatio": true,
            "defaultAspectRatios": false,
            "aspectRatios": [
                {
                    "name": "Carré - 1:1",
                    "slug": "square",
                    "ratio": "1"
                },
                {
                    "name": "Standard - 4:3",
                    "slug": "standard",
                    "ratio": "1.3333"
                },
                {
                    "name": "Large - 16:9",
                    "slug": "wide",
                    "ratio": "1.7778"
                }
            ]
        },
        "position": {
            "sticky": true
        },
        "custom": {
            "fontWeight": {
                "regular": 400,
                "semibold": 600,
                "bold": 700,
                "extrabold": 800
            },
            "lineHeight": {
                "narrow": 1.2,
                "regular": 1.5,
                "large": 1.8
            },
            "color": {
                "secondaryHover": "#F4014E",
                "secondaryAlt": "#FE5D90",
                "secondaryLight": "#FE85AC",
                "secondaryDark": "#790127"
            }
        },
        "blocks": {
            "core/column": {
                "spacing": {
                    "units": ["%"]
                }
            },
            "core/image": {
                "lightbox": {
                    "enabled": true,
                    "allowEditing": true
                }
            }
        }
    }
}
